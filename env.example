# local RabbitMQ Server config
RABBITMQ_ERLANG_COOKIE='secret cookie'
RABBIT_HOST=rabbit
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
discovery.type=single-node

# input queue for logstash pipeline
rabbitmq_input_host=rabbit
rabbitmq_input_username=guest
rabbitmq_input_pw=guest

# output queue for logstash pipeline   #### how to set this to some external host???
rabbitmq_output_host=rabbit
rabbitmq_output_username=guest
rabbitmq_output_pw=guest
rabbitmq_output_key=netsage_archive_input

# Logstash logging 
## LOG_LEVEL=debug
# Set to false so we don't install elasticsearch locally 
XPACK_MONITORING_ENABLED=false
# Jave heap size for logstash
LS_JAVA_OPTS=-Xmx2g -Xms2g
# For aggregation, ensure only one logstash worker is running
PIPELINE_WORKERS=1

# Importer settings
# EXAMPLE VALUES MUST BE REPLACED. (Comment out netflow settings if you only have sflow, or vise versa.)
sflowSensorName=sflowSensorName
netflowSensorName=netflowSensorName

######## NEED TO EXPOSE THESE SETTINGS ###############
# Flows under minBytes per 5 minutes (per nfcapd file) will be discarded. Default set here is 100MB.
#minBytes=100000000
# If culling is enabled, nfcapd files older than cullDaysToKeep will be deleted
#cullEnabled=1
#cullDaysToKeep=7

# Logstash Aggregation Filter settings
# For 5-minute nfcapd files, set inactivity_timeout to 630 sec; for 15-minute files, use 960 sec.
inactivity_timeout=630
max_flow_timeout=86400
aggregation_maps_path=/data/logstash-aggregation-maps

# In case you have your own elasticsearch instance
ELASTIC_HOSTNAME='elastic'
