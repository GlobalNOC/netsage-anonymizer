#!/usr/bin/perl

use strict;
use warnings;
use Data::Dumper;


use IPC::Shareable;
use IPC::ShareLite;
use Storable qw(freeze thaw);

my $glue = 'flow';
my %options = (
        create    => 0,
        exclusive => 0,
        mode      => 0644,
        destroy   => 0,
    );

my $cache;
#$flow_cache{'added_by_client'} = 0;

#IPC::Shareable->clean_up;

my $share = IPC::ShareLite->new(
    -key => 'flow',
    -create => 'yes',
    -destroy => 'no',
) or die $!;

warn "initially creating cache ...";
$cache = {};


while ( 1 ) {
    warn "cache at " . time() . ": \n";
    warn "thawing cache ...";
    $cache = thaw( $share->fetch );
    #warn Dumper $cache;
    warn "number of flows:" . keys %$cache;
    #$knot->remove();
    sleep 5;
    #   $flow_cache{'added_by_client'}++;
    #$flow_cache{'complex'} = {
    #    test1 => '1',
    #    test2 => '2',
    #};

}
