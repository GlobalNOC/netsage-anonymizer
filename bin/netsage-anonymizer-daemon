#!/usr/bin/perl

use strict;
use warnings;

use GRNOC::NetSage::Anonymizer::FlowAnonymizer;
use GRNOC::NetSage::Anonymizer::WorkerManager;

use Getopt::Long;
use Data::Dumper;

### constants ###

use constant DEFAULT_CONFIG_FILE => '/etc/grnoc/netsage/anonymizer/config.xml';
use constant DEFAULT_LOGGING_FILE => '/etc/grnoc/netsage/anonymizer/logging.conf';

### command line options ###

my $config = DEFAULT_CONFIG_FILE;
my $logging = DEFAULT_LOGGING_FILE;
my $nofork;
my $help;

GetOptions( 'config=s' => \$config,
            'logging=s' => \$logging,
            'nofork' => \$nofork,
            'help|h|?' => \$help );

# did they ask for help?
usage() if $help;

# start/daemonize writer
my $anonymizer = GRNOC::NetSage::Anonymizer::FlowAnonymizer->new( config_file => $config,
                                                          logging_file => $logging,
                                                          process_name => 'netsage_flowanonymizer',
                                                          daemonize => !$nofork );

my $worker = GRNOC::NetSage::Anonymizer::WorkerManager->new( config_file => $config,
                                                          logging_file => $logging,
                                                          process_name => 'netsage_flowanonymizer',
                                                          daemonize => !$nofork,
                                                          worker => $anonymizer );

$worker->start();
#$anonymizer->start();

### helpers ###

sub usage {

    print "Usage: $0 [--config <file path>] [--logging <file path>] [--nofork]\n";

    exit( 1 );
}
