#!/usr/bin/perl

use strict;
use warnings;

use GRNOC::NetSage::Deidentifier::FlowDeidentifier;
use GRNOC::NetSage::Deidentifier::WorkerManager;

use Getopt::Long;
use Data::Dumper;

### constants ###

use constant DEFAULT_CONFIG_FILE => '/etc/grnoc/netsage/deidentifier/netsage_deidentifier.xml';
use constant DEFAULT_LOGGING_FILE => '/etc/grnoc/netsage/deidentifier/logging.conf';

### command line options ###

my $config = DEFAULT_CONFIG_FILE;
my $logging = DEFAULT_LOGGING_FILE;
my $nofork;
my $help;

GetOptions( 'config=s' => \$config,
            'logging=s' => \$logging,
            'nofork' => \$nofork,
            'help|h|?' => \$help );

# did they ask for help?
usage() if $help;

# start/daemonize writer
my $deidentifier = GRNOC::NetSage::Deidentifier::FlowDeidentifier->new( config_file => $config,
                                                          logging_file => $logging,
                                                          process_name => 'netsage_flow_deidentifier',
                                                          daemonize => !$nofork );

my $worker = GRNOC::NetSage::Deidentifier::WorkerManager->new( config_file => $config,
                                                          logging_file => $logging,
                                                          process_name => 'netsage_flow_deidentifier',
                                                          daemonize => !$nofork,
                                                          worker => $deidentifier );

$worker->start();
#$deidentifier->start();

print ("  ** Check ps or /var/log/messages to be sure the processes have started successfully. **\n");

### helpers ###

sub usage {

    print "Usage: $0 [--config <file path>] [--logging <file path>] [--nofork]\n";

    exit( 1 );
}
