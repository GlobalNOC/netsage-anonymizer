#!/usr/bin/perl

use strict;
use warnings;
use Data::Dumper;


use IPC::Shareable;

my $glue = 'flow';
my %options = (
        create    => 1,
        exclusive => 0,
        mode      => 0644,
        destroy   => 0,
        size      => 10000000, # 10 MB
    );

my %cache;

my $knot = tie %cache, 'IPC::Shareable', $glue, { %options } or die "cache: tie failed\n";

IPC::Shareable->clean_up_all;
$knot->remove();
die;

$cache{'added_by_daemon'} = 0;

while ( 1 ) {
    warn "cache at " . time() . ": \n" . Dumper %cache;

    $cache{'added_by_daemon'}++;

    sleep 5;

}
