#!/usr/bin/perl

use strict;
use warnings;

use GRNOC::NetSage::Deidentifier::FlowImporter;

use Getopt::Long;
use Data::Dumper;

### constants ###

use constant DEFAULT_CONFIG_FILE => '/etc/grnoc/netsage/deidentifier/config.xml';
use constant DEFAULT_LOGGING_FILE => '/etc/grnoc/netsage/deidentifier/logging.conf';

### command line options ###

my $config = DEFAULT_CONFIG_FILE;
my $logging = DEFAULT_LOGGING_FILE;
my $nofork;
my @jsonfile;
my $help;

GetOptions( 'config=s' => \$config,
            'logging=s' => \$logging,
            'nofork' => \$nofork,
            'jsonfile=s{1,}' => \@jsonfile,
            'help|h|?' => \$help );

# did they ask for help?
usage() if $help;

# start/daemonize writer
my $flow_importer = GRNOC::NetSage::Deidentifier::FlowImporter->new( config_file => $config,
                                                          logging_file => $logging,
                                                          daemonize => !$nofork,
                                                          jsonfile => \@jsonfile );

$flow_importer->run();

### helpers ###

sub usage {

    print "Usage: $0 [--config <file path>] [--logging <file path>] [--jsonfile <file path>]\n";

    exit( 1 );
}
